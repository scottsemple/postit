<%= render 'shared/header', header: 'Register new user' %>
<%= render 'shared/errors', object: @user %>

<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <br />
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br />
  <%= f.label :phone, 'Phone Number </small>(optional, numbers only)</small>'.html_safe %>
  <%= f.text_field :phone, maxlength: 10 %>
  <br />
  <%= f.label :time_zone %>
  <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones %>
  <br />
  <%= f.submit 'Create user', class: 'btn' %>
<% end %>